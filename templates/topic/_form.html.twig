{{ form_start(form) }}
            {% set formErrors = form.vars.errors.form.getErrors(true) %}
            {% if formErrors|length %}
                <div class="user-details">
                    <ul>
                        {% for error in formErrors %}
                            <li class="register-errors">
                                ● {{ error.message }}
                            </li>
                        {% endfor %}
                    </ul>
                </div>
            {% endif %}
<div class="new-topic-details">
    <div class="input-box">
        <span class="details">Тема</span>
        {{ form_widget(form.title) }}
    </div>
    <div class="input-box">
        <span class="details">Описание проблемы</span>
        {{ form_widget(form.text) }}
    </div>
    <div class="mb-3">
        <label for="formFile" class="form-label label-details">Файл</label>
        <input class="form-control" type="file" id="formFile">
    </div>
</div>
<div class="button">
    <input type="submit" value="Создать тикет">
</div>
{{ form_end(form) }}
