{% extends 'base.html.twig' %}

{% block title %}Регистрация{% endblock %}

{% block content %}
<!-- Registration start -->
<div class="container">
    <div class="title">Регистрация</div>
    <div class="content">
        {{ form_start(registrationForm) }}
        {% set formErrors = registrationForm.vars.errors.form.getErrors(true) %}
        {% if formErrors|length %}
            <div class="user-details">
                <ul>
                {% for error in formErrors %}
                    <li class="register-errors">
                        ● {{ error.message }}
                    </li>
                {% endfor %}
                </ul>
            </div>
        {% endif %}
            <div class="user-details">
                <div class="input-box">
                    <span class="details">Email</span>
                    {{ form_widget(registrationForm.email) }}
                </div>
                <div class="input-box">
                    <span class="details">Имя</span>
                    {{ form_widget(registrationForm.name) }}
                </div>
                <div class="input-box">
                    <span class="details">Пароль</span>
                    {{ form_widget(registrationForm.plainPassword.first) }}
                </div>
                <div class="input-box">
                    <span class="details">Повторите пароль</span>
                    {{ form_widget(registrationForm.plainPassword.second) }}
                </div>
                <div class="checkbox">
                    {{ form_widget(registrationForm.agreeTerms) }}
                    {{ form_label(registrationForm.agreeTerms, null, {'label_attr':{'class':'checkbox-label'}}) }}
                </div>
            </div>
            <div class="button">
                <input type="submit" value="Зарегистрироваться">
            </div>
        {{ form_end(registrationForm) }}
    </div>
</div>
<!-- Registration end -->
{% endblock %}
