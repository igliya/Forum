<!DOCTYPE html>
<html lang="ru">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <link rel="icon" type="image/png" href="{{ asset('icons/favicon.png') }}">
        <title>{% block title %}Лабораторная работа №4{% endblock %}</title>
        {% block stylesheets %}
            <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/css/bootstrap.min.css" rel="stylesheet"
                  integrity="sha384-+0n0xVW2eSR5OomGNYDnhzAbDsOXxcvSN1TPprVMTNDbiYZCxYbOOl7+AMvyTG2x" crossorigin="anonymous">
            <link rel="stylesheet" href="{{ asset('css/style.css') }}">
        {% endblock %}
    </head>
    <body>
        <!-- Header start -->
        <header class="header">
            <div class="wrapper">
                <div class="header__wrapper">
                    <div class="header__logo">
                        <a href="{{ path('app_home') }}" class="header__logo-link">
                            <img src="{{ asset('images/logo.png') }}" alt="Logo" class="header__logo-pic">
                        </a>
                    </div>
                    <nav class="header__nav">
                        <ul class="header__list">
                            <li class="header__item">
                                <a href="{{ path('app_about') }}" class="header__link">О сайте</a>
                            </li>
                            {% if app.user is same as(null) %}
                                <li class="header__item">
                                    <a href="{{ path('app_login') }}" class="header__link">Вход</a>
                                </li>
                                <li class="header__item">
                                    <a href="{{ path('app_register') }}" class="header__link">Регистрация</a>
                                </li>
                            {% else %}
                                <li class="header__item">
                                    <a href="{{ path('app_new_topic') }}" class="header__link">Создать топик</a>
                                </li>
                                {% if is_granted('ROLE_ADMIN') %}
                                    <li class="header__item">
                                        <a href="{{ path('app_admin') }}" class="header__link">Администрирование</a>
                                    </li>
                                {% endif %}
                                <li class="header__item">
                                    <a href="{{ path('app_logout') }}" class="header__link">Выход</a>
                                </li>
                            {% endif %}
                        </ul>
                    </nav>
                </div>
            </div>
        </header>
        <!-- Header end -->
        {% block main %}
        <div class="row main__row">
            <nav class="col-md-2 d-none d-md-block sidebar">
                <div class="sidebar-sticky">
                    <ul class="nav flex-column">
                        <li class="nav-item text-center">
                            <div class="active">
                                <a class="nav-link section__link section__title" href="{{ path('app_home') }}">Разделы</a>
                            </div>
                        </li>
                        {% for section in sections %}
                        <li class="nav-item text-center">
                            <div class="active">
                                <a class="nav-link section__link" href="/{{ section.code }}">{{ section.name }}</a>
                            </div>
                        </li>
                        {% endfor %}
                    </ul>
                </div>
            </nav>
            <main class="col-md-8 ml-sm-auto col-lg-9 px-4 shadow bg-white rounded" role="main">
                {% block content %}
                {% endblock %}
            </main>
        </div>
        {% endblock %}
        {% block javascripts %}
        {% endblock %}
    </body>
</html>
